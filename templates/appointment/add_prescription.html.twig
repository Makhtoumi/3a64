{% extends 'base-front.html.twig' %}

{% block title %}Add Prescription{% endblock %}

{% block body %}
    <div style="max-width: 800px; margin: 30px auto; padding: 20px; background-color: #f9f9f9; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
        <h1 style="font-size: 1.8em; text-align: center; color: #007bff; margin-bottom: 20px;">Add Prescription</h1>

        {{ form_start(form) }}
            <div style="margin-bottom: 15px;">
                {# This will make the text area much larger and all other form fields smaller #}
                {{ form_widget(form) }}
            </div>

            <button type="submit" style="background-color: #007bff; color: white; padding: 8px 15px; border: none; border-radius: 5px; width: 100%; cursor: pointer; font-size: 1em; transition: background-color 0.3s;">Add Prescription</button>
        {{ form_end(form) }}

        <div style="margin-top: 20px; text-align: center;">
            <a href="{{ path('view_appointments') }}" style="color: #007bff; font-weight: bold; text-decoration: none; font-size: 1.1em; transition: color 0.3s;">Back to Appointments</a>
        </div>
    </div>

    <style>
        /* Targeting the textarea directly to make it much larger */
        textarea {
            width: 100%;
            height: 200px; /* Increase the height to make it larger */
            font-size: 1.1em;
            padding: 10px;
            border-radius: 8px;
            border: 1px solid #ddd;
            box-sizing: border-box;
            resize: vertical; /* Allows users to resize the textarea vertically */
        }

        /* Making all other inputs smaller */
        input[type="text"], input[type="email"], input[type="number"], select {
            font-size: 0.9em;
            padding: 8px;
            width: 100%;
            border-radius: 5px;
            border: 1px solid #ddd;
            margin-bottom: 15px;
        }
    </style>
{% endblock %}
