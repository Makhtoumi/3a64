{# templates/analyse/crud/indicator/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Analysis Indicators{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Analysis Indicators</h1>
        <a href="{{ path('app_analyse_indicator_new') }}" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    <div class="row">
        {% for indicator in indicators %}
        <div class="col-md-6 col-xl-4 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">{{ indicator.name }}</h5>
                    <span class="badge bg-{{ indicator.isActive ? 'success' : 'secondary' }}">
                        {{ indicator.isActive ? 'Active' : 'Inactive' }}
                    </span>
                </div>
                
                <div class="card-body">
                    {% if indicator.description %}
                    <p class="text-muted">{{ indicator.description }}</p>
                    {% endif %}
                    
                    <div class="mb-3">
                        <strong>Formula:</strong>
                        <code>{{ indicator.calculationFormula }}</code>
                    </div>
                    
                    <div class="mb-3">
                        <strong>Current Value:</strong>
                        <span class="badge bg-{{ currentValues[indicator.id].status|default('secondary') }}">
                            {{ currentValues[indicator.id].value|default('N/A')|number_format(2) }}
                        </span>
                    </div>
                    
                    <div class="btn-group">
                        <a href="{{ path('app_analyse_indicator_edit', {'id': indicator.id}) }}" 
                           class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a href="{{ path('app_analyse_indicator_delete', {'id': indicator.id}) }}" 
                           class="btn btn-sm btn-outline-danger"
                           onclick="return confirm('Are you sure you want to delete this indicator?')">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
        <div class="col-12">
            <div class="alert alert-info">No indicators found.</div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}